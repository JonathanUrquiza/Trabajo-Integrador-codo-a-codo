<%- include('../partials/headerS') %>
    <main class="container container--main container--shop" id="">

        <!-- Seccion lateral con filtros de busqueda y orden -->
        <aside class="shop__filters filters id="shop">
            <form class="filters__form" action="http://localhost:3000/shop/items" method="get">

                <!-- Buscar por item o categoria -->
                <div class="filters__search">
                    <label class="filters__title" for="search">BUSCAR</label>
                    <input class="input-text--box text-center" id="licence" type="text"name="licence" placeholder="Item o categoria">
                    <div class="d-flex flex-row w-100 justify-content-around">
                        <button type="submit"class="filters__title btn btn-sm btn-success my-4 ">Buscar</button>
                    <button type="submit"class="filters__title btn btn-sm btn-success my-4"><a href="shop">Ver todos</a></button>
                    </div>
                </div>
</form>
<form class="filters__form" action="" method="get">
                <!-- Ordenar items -->
                <div class="filters__order">
                    <label class="filters__title" for="short">ORDENAR POR</label>
                    <select class="input-select" name="short" id="short">
                        <option value="precio_mayor">Mayor precio</option>
                        <option value="precio_menor">Menor precio</option>
                        <option value="nombre_az">Nombre A-Z</option>
                        <option value="nombre_za">Nombre Z-A</option>
                        <option value="destacado">Destacados</option>
                    </select>
                </div>

                <!-- Filtrar items por precio -->
                <div class="filters__price">
                    <label class="filters__title">PRECIO</label>
                    <div class="filter--price">
                        <label class="label--filter-price" for="min_price">MIN<input
                                class="input-number--box input-hide-arrows" type="number" placeholder="0"
                                min="0">-</label>
                        <label class="label--filter-price" for="max_price">MAX<input
                                class="input-number--box input-hide-arrows" type="number" placeholder="0"
                                min="0"></label>
                    </div>
                </div>

                <!-- Filtrar items segun caracteristicas -->
                <div class="filters__checks">
                    <label class="filters__title">FILTRAR</label>
                    <ul>
                        <li class="filter__li">
                            <input class="input-checkbox" type="checkbox" name="check_new" id="check_new">
                            <label class="label--checkbox" for="check_new">NUEVOS</label>
                        </li>
                        <li class="filter__li">
                            <input class="input-checkbox" type="checkbox" name="check_offer" id="check_offer">
                            <label class="label--checkbox" for="check_offer">OFERTAS</label>
                        </li>
                        <li class="filter__li">
                            <input class="input-checkbox" type="checkbox" name="check_special" id="check_special">
                            <label class="label--checkbox" for="check_special">EDICIÓN ESPECIAL</label>
                        </li>
                        <li class="filter__li">
                            <input class="input-checkbox" type="checkbox" name="check_fav" id="check_fav">
                            <label class="label--checkbox" for="check_fav">FAVORITOS</label>
                        </li>
                    </ul>
                </div>
            </form>
        </aside>

        <!-- Contenedor de items y paginador -->
        <section class="shop__container col-10 w-100">

            <!-- Solo listado de items -->
            <section class="shop__items bandeja row" id="bandeja">
                <!-- Se crea lista de items desde js -->
            </section>

            <section class="shop__content my-5">
                <ul class="shop__items">
                    <% items.forEach( item=> { %>
                        <li class="shop__items shadow-lg">
                            <a class="card-item__link" href="item/<%= item.product_id %>">
                                <picture class="card-item__cover">
                                    <!-- <span class="card-item__tag">Nuevo</span> -->
                                    <img class="card-item__img--front" src="../../multimedia<%= item.image_front %>"
                                        alt="" srcset="">
                                    <img class="card-item__img--back" src="../../multimedia<%= item.image_back %>"
                                        alt="" srcset="">
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__licence">
                                        <%= item.product_licence %>
                                    </p>
                                    <h4 class="card-item__name">
                                        <%= item.product_name %>
                                    </h4>
                                    <p class="card-item__price">
                                        $<%= item.price %>-
                                    </p>
                                    <p class="card-item__promo"></p>
                                    <p class="card-text text-info">3 CUOTAS SIN INTERÉS</p>
                                    <button id=<% item.product_id %> type="submit" class="btn btnAdd btn-primary">Agregar al
                                        carrito</button>
                                </div>
                            </a>
                        </li>
                        <% }); %>
                </ul>
            </section>

            <!-- Paginador -->
            <section class="paginator">
                <ol class="d-flex flex-row flex-grow-1">
                    <li>
                        <a class="paginator__link paginator__link--arrow" href="">
                            < </a>
                    </li>
                    <li>
                        <a class="paginator__link paginator__link--active" href="">1</a>
                    </li>
                    <li>
                        <a class="paginator__link" href="">2</a>
                    </li>
                    <li>
                        <a class="paginator__link" href="">...</a>
                    </li>
                    <li>
                        <a class="paginator__link" href="">7</a>
                    </li>
                    <li>
                        <a class="paginator__link" href="">8</a>
                    </li>
                    <li>
                        <a class="paginator__link paginator__link--arrow" href="">></a>
                    </li>
                </ol>
            </section>
        </section>
    </main>
    <%- include('../partials/footerS') %>