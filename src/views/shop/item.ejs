<%- include('../partials/headerS') %>
    <!-- Partials item -->
    <main class="container">
      <% if (item.length < 1) { %>
            <section class="item__name shadow-lg my-5 ">
                <div class="card-body">
                    <h1 class="card-title text-center p-4">El item no existe o fue eliminado</h1>
                </div>

            </section>
        <% } else  { %>
         
        <section class="item shadow-lg">
            <picture class="item__img card-item__cover">
                <img class="card-item__img--front" src="../../multimedia<%= item[0].image_front %>"
                    alt="<%= item[0].item__description %>" srcset="">
                <img class="card-item__img--back" src="../../multimedia<%= item[0].image_back %>"
                    alt="<%= item[0].item__description %>">
            </picture>
            <article class="item--info">
                <p class="item__licence">
                    <%= item[0].product_licence %>
                </p>
                <h3 class="item__name">
                    <%= item[0].product_name %>
                </h3>
                <p class="item__description">
                    <%= item[0].product_description %>
                </p>
                <p class="item__price">$ <%= item[0].price %>.-</p>
                <<form class="item__cart" action="#" method="POST" enctype="application/x-www-form-urlencoded">
                    <button id="subtract" class="item__quantity" type="button">-</button>
                    <input id="quantity" class="item__input" type="text" name="quantity" placeholder="0">
                    <button id="add" class="item__quantity" type="button">+</button>
                    <button class="item__submit btn btn--primary btn--medium" type="submit">Agregar al carrito</button>
                </form>
                <p class="item__promo"><a href="">Ver métodos de pago</a> - 3 CUOTAS SIN INTERÉS</p>
            </article>
        </section>
        <% } %>
        <%- include('../components/slider') %>
    </main>
    <%- include('../partials/footerS') %>